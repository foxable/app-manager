{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist/js",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
